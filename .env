# Server Configuration
PORT=80
NODE_ENV=development

# JWT Configuration - CRITICAL: This MUST be set for authentication to work
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-very-secure-and-random

# Database Configuration
DB_PATH=./data/nobet.db

# Email Configuration
SES_SMTP_HOST=smtp-relay.brevo.com # SES Konsolundaki SMTP sunucu adresiniz
SES_SMTP_PORT=587                                 # Genellikle 587 (TLS için) veya 465 (SSL için)
EMAIL_FROM_SES_SMTP="Nobetciyim Uygulamasi <noreply@nobetciyim.cfd>" # SES'te doğruladığınız gönderici e-posta adresi

# Telegram Bot Configuration
# IMPORTANT: Replace with your actual Telegram bot token from @BotFather
# If you don't want Telegram functionality, you can leave these as-is or comment them out
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
INTERNAL_API_TOKEN=15f577a94e19b6137f19826a6ee7aab8a8c65a89ffbb446964f40fac0ae434bc

# Cron Job Configuration
CRON_DEBUG_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=8h